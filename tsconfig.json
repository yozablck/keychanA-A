{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/components/ConvexClientProvider": ["./components/ConvexClientProvider"],
      "@/components/CollectionsContent": ["./components/CollectionsContent"],
      "@/components/PricingContent": ["./components/PricingContent"],
      "@/components/Footer": ["./components/Footer"],
      "@/components/Navbar": ["./src/components/Navbar"],
      "@/components/ViewportCanvas": ["./src/components/ViewportCanvas"],
      "@/components/ViewportCanvasWrapper": ["./src/components/ViewportCanvasWrapper"],
      "@/components/CustomizationPanel": ["./src/components/CustomizationPanel"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
